{
    "name": "elxr-validation",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspaces/elxr-validation",
    "postCreateCommand": "echo 'Container Created' && poetry install && pip install dist/*.whl",
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
          // Add the IDs of extensions you want installed when the container is created.
          "extensions": [
            "ms-python.python",
            "ms-python.debugpy",
            "ms-azuretools.vscode-docker"
           ]
        }
      }
}
